<div class="grid">
    {% for block in section.blocks %}
    <div class="grid-item">
        {% case block.type %}

            {% when 'first-section' %}
            {% include 'snippet_first-section' %}

            {% when 'second-section' %}
            {% include 'snippet_second-section' %}

            {% when 'third-section' %}
            {% include 'snippet_third-section' %}

            {% when 'fourth-section' %}
            {% include 'snippet_fourth-section' %}

        {% endcase %}
    </div>
    {% endfor %}
</div>

